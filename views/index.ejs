<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap');

    body {
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 0;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        overflow: hidden;
        background: radial-gradient(circle at center, #c672c6, #8f448c, #a23372);
    }

    /* Background Particles */
    body::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background-image: radial-gradient(circle, rgba(255, 255, 255, 0.05) 1px, transparent 1px);
        background-size: 40px 40px;
        animation: moveBackground 20s linear infinite;
        z-index: 0;
    }

    @keyframes moveBackground {
        from {
            transform: translate(0, 0);
        }
        to {
            transform: translate(40px, 40px);
        }
    }

    .container {
        position: relative;
        z-index: 1;
        background: linear-gradient(145deg, #1a1a2e, #16213e);
        padding: 50px;
        border-radius: 16px;
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.9),
            0 0 25px rgba(255, 105, 180, 0.8);
        width: 450px;
        text-align: center;
        animation: fadeIn 1.2s ease-in-out, glowPulse 4s infinite;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-50px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes glowPulse {
        0%, 100% {
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.8),
                0 0 25px rgba(255, 105, 180, 0.8);
        }
        50% {
            box-shadow: 0 20px 60px rgba(0, 0, 0, 1),
                0 0 45px rgba(255, 182, 193, 1);
        }
    }

    h1 {
        font-size: 36px;
        margin-bottom: 25px;
        background: linear-gradient(90deg, #ff6f91, #ff9eac, #fddde6);
        background-size: 200% auto;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: gradientText 3s linear infinite, slideIn 1.2s ease-in-out;
    }

    @keyframes gradientText {
        0% {
            background-position: 0% center;
        }
        100% {
            background-position: 200% center;
        }
    }

    @keyframes slideIn {
        from {
            opacity: 0;
            transform: translateX(-30px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    label {
        font-size: 18px;
        font-weight: 500;
        color: #f0f0f0;
        margin-bottom: 12px;
        display: block;
    }

    input[type="text"] {
        width: 100%;
        padding: 15px;
        margin-bottom: 20px;
        border: none;
        border-radius: 10px;
        background: linear-gradient(135deg, #4e54c8, #8f94fb);
        color: #ffffff;
        font-size: 16px;
        transition: box-shadow 0.4s ease, transform 0.3s ease;
        animation: fadeIn 1.2s ease-in-out;
    }

    input[type="text"]:focus {
        outline: none;
        box-shadow: 0 0 15px rgba(143, 148, 251, 0.9);
        transform: scale(1.05);
    }

    button {
        padding: 15px 30px;
        background: linear-gradient(135deg, #ff758c, #ff9eac);
        color: #ffffff;
        font-size: 18px;
        font-weight: 600;
        border: none;
        border-radius: 12px;
        cursor: pointer;
        transition: transform 0.3s ease, box-shadow 0.4s ease;
        animation: fadeIn 1.2s ease-in-out;
        position: relative;
        overflow: hidden;
    }

    button::before {
        content: "";
        position: absolute;
        top: 0;
        left: -75%;
        width: 200%;
        height: 100%;
        background: linear-gradient(120deg, rgba(255,255,255,0.2), transparent);
        transform: skewX(-20deg);
        transition: 0.5s;
    }

    button:hover::before {
        left: 100%;
    }

    button:hover {
        transform: scale(1.1);
        box-shadow: 0 0 20px rgba(255, 182, 193, 1);
    }

    p {
        margin-top: 20px;
        font-size: 16px;
        color: #ffffff;
        animation: fadeIn 1.2s ease-in-out;
    }

    a {
        color: #ffddc1;
        text-decoration: none;
        font-weight: bold;
        transition: color 0.3s ease, text-shadow 0.3s ease;
    }

    a:hover {
        text-decoration: underline;
        color: #ffe4e1;
        text-shadow: 0 0 5px #ffe4e1;
    }
</style>
</head>
<body>
    <div class="container">
        <h1>URL Shortener Project</h1>
        <form action="/short" method="POST">
            <label for="longUrl">Enter long URL:</label>
            <input type="text" id="longUrl" name="longUrl" required>
            <button type="submit">Shorten</button>
        </form>
        <% if(shortUrl) { %>
        <p>Short URL :- <a href="<%= shortUrl %>" target="_blank" />
        <%= shortUrl %>
        </p> <% } %>
    </div>
</body>
</html>